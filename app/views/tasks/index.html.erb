<h1 class="fs-1">My tasks</h1>

<ul class="list-unstyled">
  <% @tasks.each do |task| %>
    <li class="alert alert-dark"> <%= link_to task.title, task_path(task), class:"text-decoration-none fs-4 text-dark"%> <%= link_to "✍️", task_edit_path(task), class:"btn btn-outline-secondary" %> <%= link_to "🗑️",  task_path(task), data: { turbo_method: 'delete', turbo_confirm: 'Are you sure?' }, class:"btn btn-outline-danger"  %> </li>
  <%end %>
</ul>

<%= link_to "Add a new task", tasks_new_path, class:"btn btn-success my-2" %>
